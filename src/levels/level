import wollok.game.*

Class Level {
    const solidTiles
    const iceTiles
    const initialTile
    const goalTile
    const bonusTile

    method generateLevel(_solidTiles, _iceTiles, _initialTile, _bonusTile, _goalTile) {
        _solidTiles.forEach(solid => solid.create())
        _iceTiles.forEach(ice => ice.create())
        _initialTile.create()
        _bonusTile.create()
        _goalTile.create()
    }

    //todo: implementar backgroundTiles donde no haya de otro tipo. Podría ser un PNG de background que tome toda la página
}